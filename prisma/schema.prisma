generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tutor {
  id         Int      @id @default(autoincrement())
  name       String
  email      String
  address    String
  tutorDoc   Int      @unique
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  pets       Pet[]

  @@map("tutors")
}

model Pet {
  id                  Int      @id @default(autoincrement())
  name                String
  type                String
  breed               String
  dateOfBirth         DateTime
  petTutorDocRelation Tutor    @relation(fields: [petTutorDoc], references: [tutorDoc])
  petTutorDoc         Int
  created_at          DateTime @default(now())
  updated_at          DateTime @updatedAt

  @@map("pets")
}
